{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local",
    ".env"
  ],
  "globalEnv": [
    "DB_HOST",
    "DB_NAME",
    "DB_USERNAME",
    "DB_PASSWORD",
    "JWT_TOKEN",
    "AUTH_SECRET",
    "AUTH_TRUST_HOST",
    "API_URL",
    "NEXT_PUBLIC_API_URL",
    "REACT_EDITOR",
    "NEXT_PUBLIC_IMGPROXY_URL",
    "NEXT_PUBLIC_IMGPROXY_KEY",
    "NEXT_PUBLIC_IMGPROXY_SALT"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "lint": {},
    "lint:fix": {},
    "type-check": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "test": {
      "cache": false
    },
    "start": {},
    "migrate:up": {
      "cache": false
    }
  }
}
