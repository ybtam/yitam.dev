{
  "private": true,
  "scripts": {
    "build": "turbo build",
    "start": "turbo start",
    "dev": "dotenv -e .env -- turbo dev",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "migrate:up": "turbo migrate:up",
    "type-check": "turbo type-check",
    "clean": "turbo clean",
    "test": "turbo test",
    "create-db": "pnpm --filter @apps/db create-db"
  },
  "devDependencies": {
    "dotenv-cli": "^8.0.0",
    "turbo": "^2.5.0"
  },
  "packageManager": "pnpm@10.9.0",
  "engines": {
    "node": ">=22"
  },
  "name": "project-manager",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
